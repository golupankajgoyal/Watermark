<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/medal_group_margin"
            android:layout_marginRight="@dimen/medal_group_margin"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bronze" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/medal_group_margin"
            android:layout_marginRight="@dimen/medal_group_margin"
            android:layout_height="wrap_content"
            android:src="@drawable/silver" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/medal_group_margin"
            android:layout_marginRight="@dimen/medal_group_margin"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gold" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/medal_group_margin"
            android:layout_marginRight="@dimen/medal_group_margin"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cup" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/medal_group_margin"
            android:layout_marginRight="@dimen/medal_group_margin"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="9"
            android:textSize="16dp"
            android:textColor="@color/medal_num_font_color"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="16dp"
            android:textColor="@color/medal_num_font_color"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="12"
            android:textSize="16dp"
            android:textColor="@color/medal_num_font_color"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="3"
            android:textSize="16dp"
            android:textColor="@color/medal_num_font_color"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="20"
            android:textSize="16dp"
            android:textColor="@color/medal_num_font_color"
            android:fontFamily="@font/lato"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>